{
  "name": "cleanmymac-pro",
  "version": "1.0.0",
  "description": "CleanMyMac Pro+ - The Free Mac Cleaner",
  "main": "dist-electron/electron/main.js",
  "author": "Ahsan Mahmood <aoneahsan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build-electron.js && vite build && electron-builder",
    "preview": "vite preview",
    "electron": "node scripts/build-electron.js && electron ./dist-electron/electron/main.js",
    "electron:dev": "concurrently -k \"yarn dev\" \"wait-on tcp:5173 && yarn electron:watch\"",
    "electron:watch": "node scripts/build-electron.js && NODE_ENV=development electron ./dist-electron/electron/main.js",
    "dist": "yarn build",
    "dist:mac": "yarn build && electron-builder --mac",
    "dist:mas": "yarn build && electron-builder --mac mas",
    "dist:mas-dev": "yarn build && electron-builder --mac mas-dev",
    "dist:universal": "yarn build && electron-builder --mac --x64 --arm64",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "appId": "com.zaions.cleanmymac_pro_plus",
    "productName": "CleanMyMac Pro+",
    "copyright": "Copyright © 2025 Ahsan Mahmood",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "mas",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "mas-dev",
          "arch": ["x64", "arm64"]
        }
      ],
      "bundleVersion": "100",
      "minimumSystemVersion": "10.15",
      "extendInfo": {
        "NSHumanReadableCopyright": "Copyright © 2025 Ahsan Mahmood",
        "ITSAppUsesNonExemptEncryption": false,
        "NSRequiresAquaSystemAppearance": false,
        "NSMicrophoneUsageDescription": "CleanMyMac Pro+ needs access to microphone for voice commands.",
        "NSCameraUsageDescription": "CleanMyMac Pro+ needs access to camera for document scanning.",
        "NSContactsUsageDescription": "CleanMyMac Pro+ needs access to contacts to clean up duplicate entries.",
        "NSCalendarsUsageDescription": "CleanMyMac Pro+ needs access to calendar to clean up old events.",
        "NSRemindersUsageDescription": "CleanMyMac Pro+ needs access to reminders to clean up completed items.",
        "NSLocationWhenInUseUsageDescription": "CleanMyMac Pro+ needs location access to provide localized cleanup suggestions.",
        "NSPhotoLibraryUsageDescription": "CleanMyMac Pro+ needs access to photos to clean up duplicates and optimize storage.",
        "NSAppleMusicUsageDescription": "CleanMyMac Pro+ needs access to media library to clean up duplicate files.",
        "NSFileProviderDomainUsageDescription": "CleanMyMac Pro+ needs access to external file providers to scan for junk files.",
        "NSSystemAdministrationUsageDescription": "CleanMyMac Pro+ needs administrator access to clean system files.",
        "NSAppleEventsUsageDescription": "CleanMyMac Pro+ needs to send Apple Events to communicate with other apps.",
        "NSLocalNetworkUsageDescription": "CleanMyMac Pro+ uses the local network to scan for networked drives.",
        "NSBluetoothAlwaysUsageDescription": "CleanMyMac Pro+ uses Bluetooth to communicate with paired devices for optimization."
      }
    },
    "mas": {
      "category": "public.app-category.utilities",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "hardenedRuntime": false,
      "provisioningProfile": "build/embedded.provisionprofile"
    },
    "masDev": {
      "category": "public.app-category.utilities",
      "entitlements": "build/entitlements.mas-dev.plist",
      "entitlementsInherit": "build/entitlements.mas-dev.inherit.plist",
      "hardenedRuntime": false,
      "provisioningProfile": "build/mas-dev.provisionprofile"
    }
  },
  "dependencies": {
    "@capacitor/preferences": "^7.0.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.127.3",
    "@types/y18n": "^5.0.0",
    "axios": "^1.10.0",
    "capacitor-firebase-kit": "^0.0.3",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "driver.js": "^1.3.6",
    "firebase": "^11.10.0",
    "framer-motion": "^12.23.5",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.525.0",
    "primeicons": "^7.0.0",
    "primereact": "^10.9.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-onesignal": "^3.2.3",
    "react-toastify": "^11.0.5",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "y18n": "^5.0.8",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/jspdf": "^2.0.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  }
}
